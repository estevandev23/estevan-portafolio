---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/estevandev-logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Estevan Dev | {title ?? "Portfolio"}</title>
		<ClientRouter />
	</head>
	<body class="font-montserrat text-[14px] min-h-dvh h-max">
		<Navbar />
		<slot />
	</body>
</html>
