---
import NextJs from "../assets/nextjs-icon.svg"
import SpringBoot from "../assets/spring.svg"
import PostgreSql from "../assets/postgresql.svg"
import JavaScript from "../assets/javascript.svg"
import NodeJs from "../assets/nodejs.svg"
import Python from "../assets/python.svg"
import Git from "../assets/git.svg"
import Html from "../assets/html.svg"
import Css from "../assets/css.svg"
import Tailwind from "../assets/tailwind.svg"
import Docker from "../assets/docker.svg"
import Tooltip from "./Tooltip.astro"

const icons = [{
  icon:NextJs,
  name:"after:content-['NextJs']"
}, {
  icon:SpringBoot,
  name:"after:content-['SpringBoot']"
}, {
  icon:PostgreSql,
  name:"after:content-['PostgreSql']"
}, {
  icon:Html,
  name:"after:content-['Html']"
}, {
  icon:Css,
  name:"after:content-['Css']"
}, {
  icon:JavaScript,
  name:"after:content-['JavaScript']"
}, {
  icon:Tailwind,
  name:"after:content-['Tailwind']"
}, {
  icon:Git,
  name:"after:content-['Entorno_de_Git']"
}, {
  icon:NodeJs,
  name:"after:content-['NodeJs_+_Express']"
}, {
  icon:Docker,
  name:"after:content-['Docker']"
}, {
  icon:Python,
  name:"after:content-['Python_+_Django']"
}]
---
<style>
  .slider {
    animation: slide 10s linear infinite;
  }

  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-32px * 15)); /* Move left by half the total width */
    }
  }
</style>
<section class="overflow-hidden w-min mask-l-from-80% mask-l-to-100% mask-r-from-80% mask-r-to-100%">
  <aside class="flex gap-2 slider w-[calc(33px*10)] md:w-[calc(34px*14)]">
    {[0,1].map(i => {
      return icons.map(element => {
        const { icon: Icon, name } = element;
        return (
          <Tooltip text={name} position="top">
            <span class="p-2 block w-fit aspect-square rounded-full bg-linear-to-b from-bg-theme-secondary to-bg-theme-secondary-hover">
              <Icon class="size-5" />
            </span>
          </Tooltip>
        )
      })
    })}
  </aside>
</section>